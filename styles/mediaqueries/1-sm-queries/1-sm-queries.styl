@media only screen and (min-width: 48em)
    .hidden-desk
        display:none
    #menu-mobil
        position:initial
        width:100%
        display:inline-block
    .menu ul.navegador
        position:initial
        background:none
        margin:auto
        padding:0
        height:auto
        list-style: none
        padding:0px 20px
    .menu ul.navegador li
        display:inline-block
    .menu ul.navegador ul.subnavegador li
        display:block
        &:hover
            background:#000
    .menu ul.navegador ul.subnavegador li a
        display:block
        box-sizing:border-box
    .menu .navegador li a
        display:inline-block
        width:100%
        padding:0px 10px
        box-sizing:border-box
        height:55px
        line-height:55px
        position:relative
        font-size:14px
        border-bottom:none
    ul.subnavegador
        position:absolute
        display:none
    .menu .navegador li a.desplegable
        &:after
            content: ''
            border: 4px solid transparent
            border-top: 4px solid white
            margin-left: 5px
            margin-bottom: 3px
            display: inline-block
            vertical-align: text-bottom
    .menu .navegador li.selected a.desplegable
        &:after
            border-top:0px
            border-bottom:4px solid white
            margin-bottom:6px
    .menu .navegador li:not([".selected"]) a.desplegable
        &:after
            content: ''
            border: 4px solid transparent
            border-top: 4px solid white
            margin-left: 5px
            margin-bottom: 3px
            display: inline-block
            vertical-align: text-bottom
    .navegador li a.sub-item
        height:45px
        line-height:45px
        &:before
            font-family: FontAwesome
            content:" \f068"
      
            font-size:12px
            margin-right:10px
        padding-left:25px
        background:rgba(255,255,255,0.9)
        color:$redColor
        font-weight:400
    .navegador li:hover
        background:rgba(255,255,255,0.3)
    .show-desk
        display:block
    header
        padding:0px 10px
        box-sizing:border-box
        min-height:55px
    #header-container
        display:flex
        align-items:center
        .header-nav
            display:inline-block
        .desk-buttons
            display:block
            position:absolute
            font-size:0
            right:0
            top:0
            a
                padding:20px
                margin:0
                font-size:12px
                text-transform:uppercase
            a:nth-child(1)
                background-color:transparent
                border-left:1px solid #fff
    .mobil-content
        display:none
    a.buy-ticket,ul.buttons
        display:none!important
    //Estilos Portada Principal
    #logo-portada
        display:none
    .video-controls
        position:absolute
        bottom:20px
        right:20px
        z-index:999
    section.portada
        background:none
        h1.title
            font-size:27px
        img
            width:40%
    section.portada.home:before
        content:" "
        position:absolute
        top:0
        left:0
        bottom:0
        right:0
        background:url("../img/eob-2016.png") no-repeat center
        background-position:10% 15%
        background-size:20%
        width:100%
        height:100%
    .loader:before
        content:""
        position:absolute
        top:0
        left:0
        bottom:0
        right:0
        width:100%
        height:100%
        background:url("../img/ring.svg") no-repeat center
    .loader.hiddeLoader:before
        content:""
        position:absolute
        top:0
        left:0
        bottom:0
        right:0
        width:100%
        height:100%
        background:none
    .portada
        .loader
            height:100%
            width:100%
    .container-events
        .item
            display:inline-block
            width:32%
    //Estilos Slider de Noticias
    .news-artist
        padding:20px 10px
        .premio
            margin:0 auto
            padding-left:50px
            li
                font-size:20px
                &:before
                    font-size:2em
                    position:absolute
                    margin-left:-50px
            p
                font-size:18px
    //ESTILOS CARROUSEL DE VIDEOS
    .wrapper
        width:50%
    //Estilos para Videos de Artistas por bloque
    .videos-container
        background:url("../img/bkgr-blur.jpg") center/ 230%
        color:#000
        background-attachment:fixed
        .artist-img
            height:260px
            background:rgba(0,0,0,0.2)
            img.fondo
                opacity:1
                z-index:10
            a.view-more
                display:block
                position:relative
                text-align:center
                opacity:1
                cursor:auto
                line-height:260px
            &:hover>img.fondo
                transform:scale(2.2)
                opacity:0
            &:hover>a.view-more
                z-index:10
        .artist-info
            color:#fff
            height:260px
            display:flex
            flex-direction:column
            justify-content:space-between
            .title
                h3,span
                    text-transform:uppercase
                h3
                    font-size:$h2
                    font-weight:700
                span
                    font-size:20px
                    font-weight:300
            .form-buttons
                display:flex
                justify-content:space-between
                a
                    width:40%
    //EMPIEZAN ESTILOS DE PAGINA POR ARTISTA
    section.bkgr-artist
        min-height:auto
        background:url("../img/bkgr-blur.jpg") no-repeat center / cover
        align-items:flex-end
        padding-top:60px
        #info-artist
            margin-top:0px
            height:80%
            background:rgba(0,0,0,0.2) url("../img/latin-beat-fondo.png") no-repeat right / 70%
            position:relative
            padding-left:4rem
            padding-right:4rem
            box-sizing:border-box
        img
            width:100%
        img.artist
            display:none
        h1,h5
            text-align:left
        .return-btn
            display:block!important
            position:absolute
            right:0
            top:-45px
            font-size:14px
            padding:3px 15px
            margin:0
            i
                font-size:14px
        .buy-tickets
            display:block!important
            position:absolute
            right:64px
            top:42px
            padding:20px 20px
            text-transform:uppercase
            margin:0
        .news-artist.black
            padding:10px
            text-align:left
            li
                font-size:14px
            .premio p
                font-size:12px
            
    section.event-details
        padding:10px 0px
        img
            right:0
            width:75%
        .location
            padding:0
    .map
        background:$blackColor
        padding-bottom:30px
    #googleMap
        width:100%
        height:400px
    //ESTILOS EVENTOS PASADOS PAGINA INTERNA
    .movil-portada
        display:none
    section.bkgr-past
        min-height:80vh
        background:url("../img/bkgr-blur.jpg") no-repeat center / cover
        align-items:flex-end
        display:flex
        position:relative
        overflow:hidden
        h1.title-event
            padding:10px 60px
            font-size:50px
            text-align:center
            font-weight:600 
        #info-artist
            // min-height:80vh
            min-height:auto
            background:rgba(0,0,0,0.2) url("../img/latin-beat-fondo.png") no-repeat left / 100%
            margin-top:15%
            padding-right:0
            padding-left:0
            position:relative
            width:85%
            .artists-container
                .artist
                    background:none
                    font-size:0
                    width:49.7%
                    display:inline-block
                    margin:5px 0px
                    .item
                        padding:0px 50px
                        margin:10px 0px
                        height:140px
                        img
                            width:100%
                            opacity:1
                    &:hover
                        // opacity:0.5
                    span
                        position:initial
                        display:block
                        font-size:14px
                        line-height:normal
                        width:100%
            .return-btn
                display:block
                position:absolute
                right:0
                top:-45px
                font-size:14px
                i
                    font-size:14px
    //ESTILOS PAST EVENTS POR ARTISTA
    .imgContainer
        width:33.26%
        padding:5px
    section.bkgr-past.artist
        display:flex