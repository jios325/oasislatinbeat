@media only screen and (min-width: 64em)
    #logo-portada
        display:none
    .show-md
        display:block
    .video-controls
        position:absolute
        bottom:20px
        right:20px
        z-index:999
    .portada:before
        content:" "
        position:absolute
        top:0
        left:0
        bottom:0
        right:0
        background:url("../img/logo-electro-oasis.png") no-repeat center
        background-position:10% 15%
        width:100%
        height:100%
    .loader:before
        content:""
        position:absolute
        top:0
        left:0
        bottom:0
        right:0
        width:100%
        height:100%
        background:url("../img/ring.svg") no-repeat center
    .loader.hiddeLoader:before
        content:""
        position:absolute
        top:0
        left:0
        bottom:0
        right:0
        width:100%
        height:100%
        background:none
    .portada
        .loader
            height:100%
            width:100%
    //Estilos para Videos de Artistas por bloque
    .videos-container
        .artist-img
            height:280px
        .artist-info
            height:280px
            padding:30px 20px
            .reproductor,.form-buttons
                max-width:80%
            .reproductor.right,.form-buttons.right
                padding-left:20%