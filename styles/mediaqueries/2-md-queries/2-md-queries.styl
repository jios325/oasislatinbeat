@media only screen and (min-width: 64em)
    .logo-electro
        width:100px
        height:100px
        background:#fff
        position:absolute
        display:flex
        align-items:center
        padding:10px
        left:0
        top:0
    .header-nav
        margin-left:60px!important
    .menu .navegador li a
        padding:0px 15px
    #logo-portada
        display:none
    .show-md
        display:block
    .video-controls
        position:absolute
        bottom:20px
        right:20px
        z-index:999
    section.portada
        h1.title
            font-size:27px
        img
            width:40%
    section.portada.home:before
        content:" "
        position:absolute
        top:0
        left:0
        bottom:0
        right:0
        background:url("../img/eob-2016.png") no-repeat center
        background-position:10% 15%
        background-size:20%
        width:100%
        height:100%
    .loader:before
        content:""
        position:absolute
        top:0
        left:0
        bottom:0
        right:0
        width:100%
        height:100%
        background:url("../img/ring.svg") no-repeat center
    .loader.hiddeLoader:before
        content:""
        position:absolute
        top:0
        left:0
        bottom:0
        right:0
        width:100%
        height:100%
        background:none
    .portada
        .loader
            height:100%
            width:100%
    .container-events
        .item
            display:inline-block
            width:24%
    //Estilos para Videos de Artistas por bloque
    .videos-container
        .artist-img
            height:280px
        .artist-info
            height:280px
            padding:30px 20px
            .reproductor,.form-buttons
                max-width:80%
            .reproductor.right,.form-buttons.right
                padding-left:20%
    //EMPIEZAN ESTILOS DE PAGINA POR ARTISTA
    section.event-details
        padding:20px 0px
        h6.title
            font-size:28px
        img
            right:0
            width:50%
            top:-30px
        .location
            padding:0px
            position:relative
            margin-bottom:30px
            a
                margin-right:10px
        .sale-tickets,.biography
            p
                font-size:14px
                line-height:20px
                font-weight:300
                margin-bottom:30px
        .social-networks
            // margin:10px 0px
        .biography
            margin:30px 0px
