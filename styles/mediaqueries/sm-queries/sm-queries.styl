    //     &:after
    //         content: ''
    //         border: 4px solid transparent
    //         border-top: 4px solid white
    //         margin-left: 5px
    //         margin-bottom: 3px
    //         display: inline-block
    //         vertical-align: text-bottom
    .navegador li a.sub-item
        &:before
            font-family: FontAwesome
            content:" \f068"
      
            font-size:12px
            margin-right:10px
        padding-left:25px
        background:rgba(255,255,255,0.9)
        color:$redColor
        font-weight:400
    .navegador li:hover
        background:rgba(255,255,255,0.3)
    .show-desk
        display:block
    header
        padding:0px 10px
        box-sizing:border-box
        min-height:55px
    #header-container
        display:flex
        align-items:center
        .header-nav
            display:inline-block
        .desk-buttons
            display:block
            position:absolute
            font-size:0
            right:0
            top:0
            a
                padding:20px
                margin:0
                font-size:12px
            a:nth-child(1)
                background-color:transparent
                border-left:1px solid #fff
    .mobil-content
        display:none
    a.buy-ticket,ul.buttons
        display:none!important
    //Empieza Estilos para Video Principal
    .video-controls
        position:absolute
        bottom:20px
        right:20px
        z-index:999
    .portada:before
        content:" "
        position:absolute
        top:0
        left:0
        bottom:0
        right:0
        background:url("../img/logo-electro-oasis.png") no-repeat center
        background-position:10% 15%
        width:100%
        height:100%
    .loader:before
        content:""
        position:absolute
        top:0
        left:0
        bottom:0
        right:0
        width:100%
        height:100%
        background:url("../img/ring.svg") no-repeat center
    .loader.hiddeLoader:before
        content:""
        position:absolute
        top:0
        left:0
        bottom:0
        right:0
        width:100%
        height:100%
        background:none
    //Estilos Slider de Noticias
    .news-artist
        .premio
            margin:0 auto
            padding-left:50px
            li
                font-size:20px
                &:before
                    font-size:2em
                    position:absolute
                    margin-left:-50px
            p
                font-size:18px
    .wrapper
        width:50%
    //Estilos para Videos de Artistas por bloque
    .videos-container
        background:url("../img/bkgr-blur.jpg") center/ 200%
        // background-position: center -130%
        color:#000
        background-attachment:fixed
        .artist-info
            color:#fff
            .title
                h3,span
                    text-transform:uppercase
                h3
                    font-size:$h2
                    font-weight:700
                span
                    font-size:20px
                    font-weight:300
