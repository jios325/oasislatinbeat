@media only screen and (min-width: 48em)
    #menu-mobil
        position:initial
        width:50%
        display:inline-block
    .menu ul.navegador
        position:initial
        background:none
        margin:auto
        padding:0
        height:auto
        list-style: none
        padding:0px 20px
    .menu ul.navegador li
        display:inline-block
    .menu ul.navegador ul.subnavegador li
        display:block
    .menu ul.navegador ul.subnavegador li a
        display:block
        box-sizing:border-box
    .menu .navegador li a
        display:inline-block
        width:100%
        padding:0px 20px
        box-sizing:border-box
        height:55px
        line-height:55px
        position:relative
        font-size:14px
        border-bottom:none
    ul.subnavegador
        position:absolute
        display:none
    .menu .navegador li a.desplegable
        &:after
            content: ''
            border: 4px solid transparent
            border-top: 4px solid white
            margin-left: 5px
            margin-bottom: 3px
            display: inline-block
            vertical-align: text-bottom
    .menu .navegador li.selected a.desplegable
        &:after
            border-top:0px
            border-bottom:4px solid white
            margin-bottom:6px
