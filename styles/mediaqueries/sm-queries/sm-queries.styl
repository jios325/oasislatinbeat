    .navegador li a.sub-item
        &:before
            font-family: FontAwesome
            content:" \f068"
      
            font-size:12px
            margin-right:10px
        padding-left:25px
        background:rgba(255,255,255,0.9)
        color:$redColor
        font-weight:400
    .navegador li:hover
        background:rgba(255,255,255,0.3)
    .show-desk
        display:block
    header
        padding:0px 10px
        box-sizing:border-box
        min-height:55px
    #header-container
        display:flex
        align-items:center
        .header-nav
            display:inline-block
        .desk-buttons
            display:block
            position:absolute
            font-size:0
            right:0
            top:0
            a
                padding:20px
                margin:0
                font-size:12px
            a:nth-child(1)
                background-color:transparent
                border-left:1px solid #fff
    .mobil-content
        display:none
    a.buy-ticket,ul.buttons
        display:none!important
    //Empieza Estilos paraLos videos
    .news-artist
        .premio
            margin:0 auto
    .videos-container
        background:url("../img/bkgr-blur.jpg") no-repeat center/ 300%
        background-position: center -130%
        color:#000
        background-attachment:fixed
        .artist-info
            color:#fff
            .title
                h3,span
                    text-transform:uppercase
                h3
                    font-size:$h2
                    font-weight:700
                span
                    font-size:20px
                    font-weight:300
