.container-events
	.item
		display:inline-block
		width:49%
.event-info
	padding:30px 0px
	span
		font-size:14px
		font-style:italic
		font-weight:300
		display:block
		padding:10px 0px
		// text-transform:uppercase
	p.event-description
		font-size:14px
		line-height:20px
		font-weight:300
.movil-portada
	background:url("../img/bkgr-blur.jpg") no-repeat center / cover
	display:flex
	align-items:center
	height:100vh
	transition:height 99999s ease
	#content-portada
		margin-top:40px
		h5.date-event
			font-size:45px
			margin:20px 0px
		.arrow-down
			font-size:7em
			margin:10px 0px
	img
		width:100%
section.bkgr-past
	min-height:80vh
	align-items:flex-end
	display:flex
	position:relative
	overflow:hidden
	h1.title-event
		// padding:10px 60px
		padding:10px 10px
		font-size:50px
		text-align:center
		font-weight:600	
	#info-artist
		min-height:80vh
		background:rgba(0,0,0,0.2)
		margin-top:0
		padding-right:0
		padding-left:0
		position:relative
		width:100%
		.artists-container
			.artist
				background:rgba(0,0,0,1)
				font-size:0
				width:100%
				display:block
				position:relative
				.item
					display:inline-block
					width:100%
					height:175px
					box-sizing:border-box
					overflow:hidden
					text-align:left
					img
						width:100%
						opacity:0.6
				&:hover
					// opacity:0.5
				span
					text-align:center
					text-transform:uppercase
					font-size:12px
					position:absolute
					z-index:10
					font-size:16px
					width: 80%;
					height: 50%;
					// overflow: auto;
					margin: auto;
					top: 0
					left: 0
					bottom: 0
					right: 0
					line-height:80px
		.return-btn
			display:none
	//ESTILOS PAST-EVENTS POR ARTISTA
section.galery
	background:$blackColor
	font-size:0
	padding:5px 0px
.imgContainer
	display:inline-block
	width:49.9%
	padding:5px
	box-sizing:border-box
	position:relative
	&:hover:after
		// font-family: FontAwesome
		content:" "
		background:rgba(223,38,48,0.8) url("../img/zoom-search-white.png") no-repeat center
		position:absolute
		font-size:32px
		line-height:228px
		text-align:center
		top:0
		left:0
		bottom:0
		right:0
		margin:auto
		width:100%
		opacity:1
	

				