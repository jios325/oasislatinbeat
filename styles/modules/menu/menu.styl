#menu-mobil
    position: initial
    width: 100%
    top: 93px
    left: 0px
.menu ul.navegador
    position:relative
    top:40
    left:0
    background:rgba(0,0,0,0.8)
    // width:100%
    margin:auto
    padding:0
    height:auto
    list-style: none
    overflow:hidden
    font-size:0
    & li:hover
        background:rgba(0,0,0,0.3)
.menu .navegador li a
    width:100%
    padding-left:20px
    height:50px
    line-height:50px
    display:block
    overflow:hidden
    position:relative
    text-decoration:none
    font-weight:100
    text-transform:uppercase
    font-size:14px
    color:lighten(#686868,70%)
    transition:all 0.2s linear
    border-bottom:1.5px solid #242a34
    // box-shadow:0px 0px 3px rgba(0,0,0,0.1) inset
    i
        font-size:24px
        margin-right:10px
        line-height:50px
        vertical-align:top
.menu .navegador li a.desplegable
    &:after
        content: ''
        border: 4px solid transparent
        border-top: 4px solid white
        margin-left: 5px
        margin-bottom: 3px
        display: inline-block
        vertical-align: text-bottom
.menu .navegador li.selected a.desplegable
    &:after
        border-top:0px
        border-bottom:4px solid white
        margin-bottom:6px
.navegador li a.sub-item
    padding-left:35px
    background:rgba(255,255,255,0.2)