header
	background:rgba(0,0,0,0.5)
	padding:0px 0px
	position:absolute
	top:0
	left:0
	width:100%
	z-index:999
	display:block
	// overflow:hidden
	.header-nav
		height:40px
		margin-left:0px
		ul
			display:inline-block
			float:right
			font-size:0//REtira espacios entre listas
			li
				display:inline-block
				border-left:1px solid #fff
				a
					display:block
					padding:0px 10px
					
					&:hover
						background:red
		.logo
			display:inline-block
			padding-left:5px
			img
				margin:calc(3px)
		.buttons
			i
				font-size:24px
				line-height:40px
