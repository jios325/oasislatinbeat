html
	height:100%
body
	height: 100%
	width:100%
	font-family: $font
	line-height: 1.3
	letter-spacing: .5px
	color: $primaryColor
	font-size: 13px
	// background-color:teal
a
	color: $primaryColor
	text-decoration: none
	&:hover
		color: lighten($primaryColor, 10%)
		text-decoration: none
h1, h2, h3, h4, h5, h6, a
	font-family: $font
h1
	font-size: $h1
h2
	font-size: $h2
h3
	font-size: $h3
h4
	font-size: $h4
h5
	font-size: $h5
strong 
	font-weight: 700
small
	font-size: 70%
.block-center
	margin-right: auto
	margin-left: auto
.text-center
	text-align:center
.text-left
	text-align:left
.text-right
	text-align:right
.light
	font-weight: 300
.text-success
	color:$vividColor
.pull-right
	float: right!important
.pull-left
	float: left!important
.hidden,.hidden-xs
	display:none
.lazy
	background: url("../img/loader.gif") no-repeat center
.lazy-loaded
	background-image: none
