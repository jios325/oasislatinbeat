a.buy-ticket
	position:absolute
	top:40px
	left:0px
	padding:15px 0px
	z-index:10
a.fixed
	position:fixed
	top:0
	left:0
section.portada
	height:100vh
	background:url("../img/img-header@2x.jpg") no-repeat
	background-size:cover
	background-position:center top
	display:flex
	align-items:center
	overflow:hidden
	transition:height 99999s ease  
	img
		width:70%
	h1.title
		font-size:22px
		color:$redColor
		letter-spacing:7px
		text-transform:uppercase
		margin-top:15px
	h2
		font-size:18px
		color:$redColor
		letter-spacing:7.5px
		font-weight:100
		text-transform: uppercase
		margin-top:20px
		tex-align:center
		margin-right:-7.5px
	h5
		font-size:55px
		color:$purpleColor
		font-weight:100
		margin-top:-10px
		text-align:center
	hr.underline
		margin:0
		border:none
		width:50%
		border-top:2px solid $redColor
		margin:0 auto
	.link-video
		color:$redColor
		transition:all 0.5s ease
		i
			margin-top:20px
		&:hover
			color:$purpleColor
.news-artist
	background:$purpleColor
	padding:10px 10px
	.premio
		display: table
		margin-left: 0
		padding-left: 0
		list-style: none
		margin:0 auto
		li
			display: table-row
			font-size:16px
			&:before
				font-family: FontAwesome;
				font-size:1.5em
				color:#fff
				content: "\f10d"
				display: table-cell
				padding-right: 0.4em
				vertical-align:middle
			&:nth-child(2):before
				content:""
		p
			font-style:italic
			font-weight:100
			font-size:13px
.videos-container
	.artist-img
		height:180px
		width:100%
		padding:10px
		position:relative
		box-sizing:border-box
		background-color:rgba(0,0,0,0.8)
		overflow:hidden
		.title
			padding:57px
			text-align:center
			color:#fff
			position:relative
			h1,span
				text-transform:uppercase
			h1
				font-size:$h3m
				font-weight:700
			span
				font-size:20px
				font-weight:100
		a
			position:absolute
			bottom:10px
			font-size:28px
		a.btn-music
			right:5px
		a.btn-video
			left:5px
		a.view-more
			display:none
		img.fondo
			width:115%
			position:absolute
			left:-35px
			top:0
			opacity:0.7
			transition:all 0.7s ease
	.artist-info
		background:rgba(0,0,0,0.1) url("../img/latin-beat-fondo.png") no-repeat right / 70%
		padding:20px
		box-sizing:border-box
		height:180px
	.row-custom
		margin:0 -2rem
		// background:#000
		.col-xs-12
			padding-left:0
			padding-right:0